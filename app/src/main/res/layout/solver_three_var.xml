<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context="com.wordpress.httpspandareaktor.mekanism.solvers.physicsAccelerationSolver1">

        <ImageView
            android:id="@+id/threeVarImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/phys_accel_eqn1" />

        <TextView
            android:id="@+id/threeVarDescriptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="var descriptions" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/lightWorld" />

        <!--Layout containing the input follow-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/threeVarSymbolA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="symA ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/threeVarFieldA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/threeVarUnitsA"
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="units" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/threeVarSymbolB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="symB = "
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/threeVarFieldB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/threeVarUnitsB"
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="units" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/threeVarSymbolC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="symC ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/threeVarFieldC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/threeVarUnitsC"
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="units" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/lightWorld" />


        </LinearLayout>


        <Button
            android:id="@+id/threeVarButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/darkerWorld"
            android:text="Calculate"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="bottom|right"
                android:text="Equation Code:"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/threeVarCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="PHY1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorBurntOJ" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>