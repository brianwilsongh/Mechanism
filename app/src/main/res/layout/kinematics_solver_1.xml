<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context="com.wordpress.httpspandareaktor.mekanism.Solvers.PhysMotion1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Check and fill in all variables except the one that you are solving for. Verify units."
            android:textAppearance="?android:textAppearanceMedium">

        </TextView>
        <!--Layout containing the checkboxes follow-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_deltax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="positionEnable"
                android:text="@string/distance_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/input_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="meters" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="velocityEnable"
                android:text="@string/init_velo_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vâ‚€ ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/input_velocity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="meters / second" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_acceleration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="accelerationEnable"
                android:text="@string/accel_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/input_acceleration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="meters / second^2" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_deltat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="timeEnable"
                android:text="@string/time_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="t ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/input_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="seconds"/>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/trigger_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@color/darkerWorld"
            android:text="Calculate"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>