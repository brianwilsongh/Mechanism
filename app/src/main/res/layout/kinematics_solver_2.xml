<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context="com.wordpress.httpspandareaktor.mekanism.KinematicsSolver2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="For each variable, check the appropriate box. Verify units and input the values."
            android:textAppearance="?android:textAppearanceMedium">

        </TextView>
        <!--Layout containing the checkboxes follow-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/eq2_check_final_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ2finalVelocityEnable"
                android:text="Velocity at time=t , also known as final velocity"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vₜ ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq2_input_final_velocity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="meters/second"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/eq2_check_initial_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ2initialVelocityEnable"
                android:text="Initial velocity, or starting speed (m/s)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v₀ ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq2_input_initial_velocity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="meters / second"
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/eq2_check_acceleration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ2accelerationEnable"
                android:text="Acceleration (should be constant (m/s^2))" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq2_input_acceleration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="meters / second^2"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/eq2_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ2timeEnable"
                android:text="Time, from beginning to end (s)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="t ="
                    android:layout_gravity="center"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq2_input_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="seconds"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/eq2_trigger_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@color/darkWorld"
            android:textColor="#FFFFFF"
            android:text="Calculate" />

    </LinearLayout>
</ScrollView>