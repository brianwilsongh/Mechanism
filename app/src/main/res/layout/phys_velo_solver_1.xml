<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context="com.wordpress.httpspandareaktor.mekanism.solvers.physicsVelocitySolver1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Check and fill in all variables except the one that you are solving for. Verify units."
            android:textAppearance="?android:textAppearanceMedium">

        </TextView>
        <!--Layout containing the checkboxes follow-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/eq7_check_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ7velocityEnable"
                android:text="@string/velocity_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq7_input_velocity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="meters / second" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/eq7_check_displacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ7displacementEnable"
                android:text="@string/distance_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Δd = "
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq7_input_displacement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="meters" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/eq7_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="EQ7timeEnable"
                android:text="@string/time_desc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Δt ="
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorBurntOJ" />

                <EditText
                    android:id="@+id/eq7_input_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="unknown"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    style="@style/unitDisplayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="seconds" />
            </LinearLayout>



        </LinearLayout>


        <Button
            android:id="@+id/eq7_trigger_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@color/darkerWorld"
            android:text="Calculate"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>